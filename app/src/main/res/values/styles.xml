<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeRebel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryRebel</item>
        <item name="colorPrimaryDark">@color/colorPrimaryRebelDark</item>
        <item name="colorAccent">@color/colorAccentRebel</item>
    </style>

    <style name="AppThemeEmpire" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryEmpire</item>
        <item name="colorPrimaryDark">@color/colorPrimaryEmpireDark</item>
        <item name="colorAccent">@color/colorAccentEmpire</item>
    </style>

    <style name="Header" parent="AppTheme">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textLarge">
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>

    <style name="textMedium">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="textSmall">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="ComponentListItem" parent="AppTheme">
        <item name="android:background">?android:colorPrimaryDark</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="ComponentListItem.Highlighted" parent="ComponentListItem">
        <item name="android:background">?android:colorAccent</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ObjectiveItem">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
